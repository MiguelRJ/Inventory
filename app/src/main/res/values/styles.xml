<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeError" parent="AppTheme">
        <item name="textColorError">@android:color/holo_red_dark</item>
    </style>

    <style name="AppThemeDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryLogin</item>
    </style><!-- Siempre especificar el parent <style name="LoginTheme" parent="AppTheme"> -->

    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button"/>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item><!-- @null se deja lo definido en el style de api 25, pero se pone a null -->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginEditText">
        <item name="android:padding">10dp</item>
    </style>

    <style name="chkBox">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="styleSpinner" parent="android:Widget.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/edtHeight</item>
        <item name="android:background">@color/colorPrimaryLogin</item>
        <item name="android:strokeColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginEnd">@dimen/spnProductsMarginEnd</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="txvProductsActivity" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginTop">@dimen/txvMarginTop</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edtProductsActivyty" parent="android:Widget.EditText">
        <item name="android:layout_width">@dimen/edtWidth</item>
        <item name="android:layout_height">@dimen/edtHeight</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/edtProductsPadding</item>
        <item name="android:layout_marginEnd">@dimen/edtProductsMarginEnd</item>
    </style>

</resources>
