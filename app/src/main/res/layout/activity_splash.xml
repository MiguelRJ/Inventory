<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inventoryFragmentBD.SplashActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/android.R.id.content">

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_fondo"
        android:contentDescription="@string/contentImgDashboard"/>
    <!-- android:layout_gravity="center_horizontal|center_vertical" con el "|" se pueden poner varios atributos -->
</FrameLayout>
